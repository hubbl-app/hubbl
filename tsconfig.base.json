{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hubbl/data-access/api": ["libs/data-access/api/src/index.ts"],
      "@hubbl/data-access/contexts": ["libs/data-access/contexts/src/index.ts"],
      "@hubbl/shared/models/body-validators": [
        "libs/shared/models/body-validators/src/index.ts"
      ],
      "@hubbl/shared/models/dto": ["libs/shared/models/dto/src/index.ts"],
      "@hubbl/shared/models/entities": [
        "libs/shared/models/entities/src/index.ts"
      ],
      "@hubbl/shared/models/helpers": [
        "libs/shared/models/helpers/src/index.ts"
      ],
      "@hubbl/shared/types": ["libs/shared/types/src/index.ts"],
      "@hubbl/ui/components": ["libs/ui/components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
